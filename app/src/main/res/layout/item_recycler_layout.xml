<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/upcoming_batch_item_recycler_constraint_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4DFFAABB">

            <TextView
                android:id="@+id/product_id"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:text="01"
                android:textColor="@android:color/holo_blue_bright"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_product_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="Product name"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/product_id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_product_category_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product category"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/item_product_name_id"
                app:layout_constraintTop_toBottomOf="@id/item_product_name_id" />

            <TextView
                android:id="@+id/item_product_description_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Product description"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/item_product_name_id"
                app:layout_constraintTop_toBottomOf="@id/item_product_category_id" />

            <TextView
                android:id="@+id/item_product_price_id"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:text="$ 250"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_del_btn_id"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/item_del_btn_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/item_del_btn"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>